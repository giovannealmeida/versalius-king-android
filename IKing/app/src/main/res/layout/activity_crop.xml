<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_crop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="br.com.versalius.iking.activities.CropActivity">

    <ImageButton
        android:id="@+id/btCrop"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circular_button"
        android:src="@drawable/ic_check_line"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp" />

    <com.edmodo.cropper.CropImageView xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cropImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btCrop"
        custom:aspectRatioX="1"
        custom:fixAspectRatio="true"
        custom:guidelines="on" />

</RelativeLayout>
